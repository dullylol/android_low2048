<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="600dp"
        android:layout_height="600dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#F1E9A5"
            android:gravity="center"
            android:text=""
            android:textSize="60dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#F1E9A5"
            android:gravity="center"
            android:text=""
            android:textSize="60dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#F1E9A5"
            android:gravity="center"
            android:text=""
            android:textSize="60dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#F1E9A5"
            android:gravity="center"
            android:text=""
            android:textSize="60dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#F1E9A5"
            android:gravity="center"
            android:text=""
            android:textSize="60dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#F1E9A5"
            android:gravity="center"
            android:text=""
            android:textSize="60dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#F1E9A5"
            android:gravity="center"
            android:text=""
            android:textSize="60dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#F1E9A5"
            android:gravity="center"
            android:text=""
            android:textSize="60dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#F1E9A5"
            android:gravity="center"
            android:text=""
            android:textSize="60dp" />

    </androidx.gridlayout.widget.GridLayout>

    <ImageButton
        android:id="@+id/moveDown"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/arrow_down"
        android:onClick="onClickMoveDown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/restartButton"
        app:layout_constraintVertical_bias="0.45" />

    <ImageButton
        android:id="@+id/moveUp"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/arrow_up"
        android:onClick="onClickMoveUp"
        app:layout_constraintBottom_toTopOf="@+id/restartButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/moveLeft"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/arrow_left"
        android:onClick="onClickMoveLeft"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/restartButton"
        app:layout_constraintStart_toEndOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/restartButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/restart"
        android:onClick="onClickMoveRestart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/moveRight"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/arrow_right"
        android:onClick="onClickMoveRight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/restartButton"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>